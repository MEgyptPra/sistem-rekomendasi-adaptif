# Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/pariwisata_db

# Real-Time Data APIs (Replace with your keys)
# Get OpenWeatherMap API key: https://home.openweathermap.org/api_keys
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Google Maps API (Optional) - Get key: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# TomTom API (Optional Alternative) - Get key: https://developer.tomtom.com/
TOMTOM_API_KEY=your_tomtom_api_key_here

# Cache Settings
WEATHER_CACHE_DURATION=1800  # 30 minutes
REALTIME_CACHE_DURATION=300  # 5 minutes

# Location Settings (Sumedang, Indonesia)
# Jika parameter lat/lon tidak diberikan pada endpoint cuaca,
# maka backend akan menggunakan nilai default ini.
DEFAULT_LATITUDE=-6.8568
DEFAULT_LONGITUDE=107.9214

# JWT Secret (change in production)
SECRET_KEY=your-secret-key-here

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
